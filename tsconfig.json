{
  "compilerOptions": {
    "typeRoots": ["@types", "node_modules/@types"],
    "module": "commonjs",
    "declaration": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2017",
    "sourceMap": false,
    "outDir": "dist",
    // "baseUrl": "src",
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictPropertyInitialization": false
  },

  "exclude": ["node_modules", "dist"]
}
